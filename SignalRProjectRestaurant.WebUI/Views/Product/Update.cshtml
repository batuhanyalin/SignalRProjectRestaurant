@model UpdateProductDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Ürün Güncelle</div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col col-md-6">
                                <div class="form-group">
                                    <input type="hidden" asp-for="ProductId" />
                                    <label for="">Ürün Adı</label>
                                    <input asp-for="ProductName" type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="">Kategori</label>
                                    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categoryList, new { @class = "form-control" })
                                </div>
                                <div class="form-check">
                                    <label>Durum</label><br />
                                    <label class="form-radio-label">
                                        <input class="form-radio-input" type="radio" asp-for="ProductStatus" value="True" checked="">
                                        <span class="form-radio-sign">Aktif</span>
                                    </label>
                                    <label class="form-radio-label ml-3">
                                        <input class="form-radio-input" type="radio" asp-for="ProductStatus" value="False">
                                        <span class="form-radio-sign">Pasif</span>
                                    </label>
                                </div>
                            </div>
                            <div class="col col-md-6">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col col-md-6">
                                            <label>Mevcut Görsel</label><br />
                                            <img height="100px" src="@Model.ImageUrl" />
                                        </div>
                                        <div class="col col-md-6">
                                            <label for="">Görsel</label><br />
                                            <label for="upload" class="btn btn-outline-secondary me-2 mb-4" tabindex="0">
                                                <span class="d-none d-sm-block"><i class="la la-upload"></i> Yükle</span>
                                                <input type="file" name="ImageUpload" id="upload" class="account-file-input" hidden accept="image/png, image/jpeg" />
                                            </label>
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label for="">Fiyat</label>
                                    <input asp-for="Price" type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-md-12">
                                <textarea style="height:130px" class="form-control" asp-for="Description"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success"><i class="la la-save"></i> Kaydet</button>
                        <a href="/Product/Index" class="btn btn-danger"><i class="la la-reply"></i> Çıkış</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

