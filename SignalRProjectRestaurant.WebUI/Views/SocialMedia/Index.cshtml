@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="container-fluid">
    <h4 class="page-title">Sosyal Medyalar</h4>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <a class="btn btn-success" href="/SocialMedia/Create/"><i class="la la-plus-square"></i> Yeni Sosyal Medya Ekle</a>
                    </div>
                </div>
                <div class="card-body">
                    <div style="font-size:small" class="card-sub">
                        Listeli değerleri görebilir, ekleme silme ve güncelleme işlemlerini bu panelden gerçekleştirebilirsiniz.
                    </div>
                    <table style="text-align:center" class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Logo</th>
                                <th scope="col">Platform</th>
                                <th scope="col">Link</th>
                                <th scope="col">Aksiyon</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td><i style="font-size:xxx-large" class="@item.Logo"></i></td>
                                    <td>@item.Platform</td>
                                    <td><a href="@item.LinkUrl"><i class="la la-external-link btn btn-info"></i></a></td>
                                    <td>
                                                        <a href="/SocialMedia/ChangeStatus/@item.SocialMediaId">
                                            @if (item.Status == true)
                                            {
                                                <span class="btn btn-outline-success"><i class="la la-check"></i> Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="btn btn-outline-danger"><i class="la la-close"></i> Pasif</span>
                                            }
                                        </a>
                                        <a class="btn btn-warning" href="/SocialMedia/Update/@item.SocialMediaId"><i class="la la-edit"></i> Güncelle</a>

                                        <a class="btn btn-danger" href="/SocialMedia/Delete/@item.SocialMediaId"><i class="la la-trash"></i> Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

