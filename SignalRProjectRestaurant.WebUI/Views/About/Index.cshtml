@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <span>Yeni Kategori Ekle</span>
                    </div>
                </div>
                <div class="card-body">
                    <div style="font-size:small" class="card-sub">
                    Hakkında bilgisi silinemez, yeni hakkında eklenemez, yalnızca güncelleyebilirsiniz.
                    </div>
                    <table style="text-align:center" class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Görsel</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Aksiyon</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.AboutId</td>
                                    <td><img width="200px" style="border-radius:5px" src="@item.ImageUrl" /></td>                                   
                                    <td>@item.Title</td>
                                    <td>
                                        @if (@item.Description.Length > 50)
                                        {

                                            @item.Description.Substring(0, 50)
                                            ;
                                        }
                                        else
                                        {
                                            @item.Description.ToString()
                                            ;
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-warning" href="/About/Update/"><i class="la la-edit"></i> Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
