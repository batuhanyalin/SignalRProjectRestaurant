@model UpdateAboutDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkında Güncelle</div>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="AboutId" />
                        <input type="hidden" asp-for="ImageUrl" />
                        <div class="row">
                            <div class="col col-md-4">
                                <label class="form-label">Mevcut Görsel</label><br />
                                <img style="border-radius:5px" width="300px" height="auto" src="@Model.ImageUrl" />
                            </div>
                            <div class="col col-md-8">
                                <div class="form-group">
                                    <label for="">Görsel</label><br />
                                    <label for="upload" class="btn btn-outline-secondary me-2 mb-4" tabindex="0">
                                        <span class="d-none d-sm-block"><i class="la la-upload"></i> Yükle</span>
                                        <input type="file" name="ImageUpload" id="upload" />
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-md-12">
                             
                                <div class="form-group">
                                    <label for="">Başlık</label>
                                    <input type="text" asp-for="Title" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="">Hakkında</label>
                                    <textarea asp-for="Description" required class="form-control" style="height:200px"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">
                            <i class="la la-rotate-right"></i> Güncelle
                        </button>
                        <a href="/Product/Index" class="btn btn-danger"><i class="la la-reply"></i> Çıkış</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


